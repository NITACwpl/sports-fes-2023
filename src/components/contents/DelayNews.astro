---
import SubTitle from "../../components/SubTitle.astro";
import DelayNewsItem from "../../components/DelayNewsItem.astro";

const delayValues = [];

  var scriptUrl = 'https://script.google.com/macros/s/AKfycbx54LjQ1sxSesCf4-lPzP9biO-WK3g8pgRmGApAaMAVJJJsrr1o-cw9N8LjROJO--x8/exec';

  // fetchを使用してデータを取得
  fetch(scriptUrl)
    .then(response => response.json())
    .then(data => {

    for (let i = 1; i < data.length; i++) {
      let nowTime = new Date(data[i][2]);
      delayValues.push({
        name: data[i][0],
        updateAt: nowTime.getHours() + ":" + nowTime.getMinutes(),
        delay: data[i][1],
      });
    }
    console.log("やぁ", delayValues);
    })
    .catch(error => console.error('Error:', error));

---

<div class="delayNews">
  <SubTitle title="遅延情報" subTitle="目安程度に。５分前行動厳守！"/>
  <div class="table">
    <div class="tableTitle">
      <div class="name text-12">遅延種目</div>
      <div class="delayValueTitle">
        <div class="updateAt text-10">更新時刻</div>
        <div class="delay text-12">遅延時間</div>
      </div>
    </div>
    {delayValues.length != 0 ? 
    (
    delayValues.map((delayValue, index) => (
      <DelayNewsItem name={delayValue.name} updateAt={delayValue.updateAt} delay={delayValue.delay} isLastContent={index == delayValues.length - 1} />
    ))
    ): (
      <div>{delayValues.length}</div>
    )}
  </div>
</div>

<style>
  .table {
    width: 100%;
    border-radius: 4px;
    border-spacing: 0;
  }
  .tableTitle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
    padding-left: 20px;
    padding-right: 20px;
    background-color: var(--color-primary-orange-200);
    border-radius: 4px 4px 0 0;
    color: var(--color-white);
  }
  .name {
    flex: 1;
  }
  .delayValueTitle {
    display: flex;
    align-items: center;
    column-gap: 10px;
  }
</style>

