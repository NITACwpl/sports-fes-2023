</div>

<style>
  .table {
    height: 300px;
    width: 100%;
    display: flex;
    border-radius: 4px;
    overflow: scroll;
  }

  .fixedIcons{
    position: sticky;
    left: 0;
    z-index: 1;
  }

  .scrollTitle {
    position: sticky;
    top: 0;
    z-index: 1;
  }

  .fixed {
    position: sticky;
    left: 0;
    z-index: 2;
  }

  .fixedTitle {
    position: sticky;
    left: 0;
    top: 0;
    z-index: 3;
  }

  .fixed {
    height: fit-content;
    width: 60px;
    border-radius: 4px 0 0 4px;
  }
  .fixedTitle {
    height: 30px;
    width: 60px;
    background-color: var(--color-primary-orange-200);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px 0 0 0;
  }
  .fixedIcons {
    width: 100%;
    background-color: var(--color-white);
  }
  .fixedIconHolder {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .fixedIcon {
    width: 28px;
    height: 28px;
    color: var(--color-primary-orange-100);
  }
  .scroll {
    width: 1950px;
    border-radius: 0 4px 4px 0;
    height: fit-content;
  }
  .scrollTitle {
    height: 30px;
    width: 1950px;
    background-color: var(--color-primary-orange-200);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: end;
    border-radius: 0 4px 0 0;
    column-gap: 4px;
  }
  .timeItem {
    width: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .scrollItems {
    width: 1950px;
  }
</style>