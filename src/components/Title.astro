
---
import { Icon } from "astro-iconify";
---

<div class="titleContainer">
    <h1 class="text-24 title">スポーツ大会2023</h1>
    <Icon name="ion:search" class="searchIcon" />
</div>

<style>
    .titleContainer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1;
        height: 60px;
        padding: 10px 20px;
        background-color: var(--color-primary-orange-100);
    }
    .title {
        color: var(--color-white);
    }
    .searchIcon {
        width: 24px;
        height: 24px;
        color: var(--color-white);
        display: flex;
        line-height: 34.75px;
        justify-content: space-between;
    }
    h1{
        width: 190px;
        height: 35px;
        margin: 10px 0px 10px 20px;
    }
    img{
        display: inline-block;
        position: relative;
        margin: auto 20px auto auto;
        padding: 2.25px 2.29px 2.29px 2.25px;
        width: 24px;
        height: 24px;
    }
</style>