---
import { Icon } from "astro-iconify";
import BattleGroup from "../BattleGroup.astro";
import { fetchTimeTableData } from "../../lib/fetchTimeTableData";

var responce = [
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
    { kou: "0", otsu: "0" },
];

responce = await fetchTimeTableData("ValleyD2");
---
<div class="plus">
    <div class="kyogi">
        <div class="name text-16">
            バレーボール
        </div>
        <div class="place">
            <Icon name="ph:map-pin-fill" class="placeIcon" />
            <p class="text-12">体育館(奥)</p>
        </div>
    </div>
    <div class="table"> <!-- typeはlunch, battleに。startIdはstart0900-1540まで。endIdは0920-1600まで。kouとotsuはなくてもOk  -->
        <BattleGroup type="battleVolley" startId="start1000" endId="end1020" kou={responce[0].kou} otsu={responce[0].otsu} />
        <BattleGroup type="battleVolley" startId="start1020" endId="end1040" kou={responce[1].kou} otsu={responce[1].otsu} />
        <BattleGroup type="battleVolley" startId="start1040" endId="end1100" kou={responce[2].kou} otsu={responce[2].otsu} />
        <BattleGroup type="battleVolley" startId="start1100" endId="end1120" kou={responce[3].kou} otsu={responce[3].otsu} />
        <BattleGroup type="battleVolley" startId="start1140" endId="end1200" kou={responce[4].kou} otsu={responce[4].otsu} />
        <BattleGroup type="lunch" startId="start1200" endId="end1240" />
        <BattleGroup type="battleVolley" startId="start1240" endId="end1300" kou={responce[5].kou} otsu={responce[5].otsu} />
        <BattleGroup type="battleVolley" startId="start1300" endId="end1320" kou={responce[6].kou} otsu={responce[6].otsu} />
        <BattleGroup type="battleVolley" startId="start1340" endId="end1400" kou={responce[7].kou} otsu={responce[7].otsu} />
    </div>
</div>

<style>
    .plus {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 1910px;
        height: 60px;
    }
    .kyogi {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 5px;
        row-gap: 5px;
        width: 150px;
    }
    .place {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: left;
        width: 100%;
    }
    .name {
        width: 100%;
    }
    .placeIcon {
        width: 16px;
        height: 16px;
        color: red;
    }
    .table {
        height: 100%;
        width: 1768px;
        align-items: center;
        display: grid;
        gap: 4px;
        grid-template-columns: 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px 80px; /* 21 */
    }
</style>