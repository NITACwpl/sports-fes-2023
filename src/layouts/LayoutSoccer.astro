---
import '@fontsource/roboto-condensed';
import '@fontsource/zen-kaku-gothic-antique';

import FallAnimationSoccer from '../components/FallAnimationSoccer.astro';
import Title from '../components/Title.astro';
import Navbar from '../components/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

const pageTitles = {
	index: "スポーツ大会2023|ホーム",
	map: "スポーツ大会2023|地図",
	results: "スポーツ大会2023|結果",
	rules: "スポーツ大会2023|ルール",
	sports: "スポーツ大会2023|競技"
}

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitles[title]}</title>
		<!--ogpの設定-->
	        <meta property="og:url" content="https://sports2023.nitacwpl.tech">
	        <meta property="og:type" content="website">
	        <meta property="og:title" content="スポーツ大会|明石高専Web製作研究部">
	        <meta property="og:description" content="明石高専のみなさん、こんにちは！こちらは11月21日（火）、11月22日（水）の２日間にかけて開催されるスポーツ大会のホームページです。">
	        <meta property="og:site_name" content="スポーツ大会">
	        <meta property="og:image" content="/BasketballInTheGym.png">
	        <meta name="twitter:card" content="summary_large_image">
	</head>
	<body>
		<FallAnimationSoccer>
			<div class="container">
				<Title />
				<main>
					<div class="mainContainer">
						<slot />
					</div>
				</main>
				<Navbar pageName={title} />
			</div>
		</FallAnimation>
	</body>
</html>

<style is:global>
	:root {
		--color-black: #000;
		--color-white: #fff;
		--color-primary-black: #454545;
		--color-primary-orange-300: #FFE6C7;
		--color-primary-orange-200: #FFA114;
		--color-primary-orange-100: #CB6E00;
	}
	.num-10 {
		font-size: 10px;
		font-family: "Roboto Condensed", sans-serif;
		font-weight: 400; /* regular */
	}
	.num-24 {
		font-size: 24px;
		font-family: "Roboto Condensed", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-10 {
		font-size: 10px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-12 {
		font-size: 12px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 500; /* medium */
	}
	.text-16 {
		font-size: 16px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 400; /* regular */
	}
	.text-20 {
		font-size: 20px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-24 {
		font-size: 24px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-32 {
		font-size: 32px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	html {
		font-family: system-ui, sans-serif;
		background: #eee;
	}
	* {
		margin: 0;
		padding: 0;
	}
	body {
		width: 100dvw;
		height: 100dvh;
		display: flex;
		justify-content: center;
		position: relative;
	}
	.container {
		width: 100%;
		max-width: 800px;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	main {
		flex: 1;
		overflow-y: auto;
		padding: 0 10px 50px 10px;
		background-color: rgba(255, 255, 255, 0.5);
	}

	.mainContainer {
		display: flex;
		flex-direction: column;
	}
</style>
