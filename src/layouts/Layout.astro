---
import Title from '../components/Title.astro';
import Navbar from '../components/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

// 色変数
export const colors = {
	black: '#000',
	white: '#fff',
	primaryBlack: "#454545",
	primaryOrange300: "#FFE6C7",
	primaryOrange200: "#FFA114",
	primaryOrange100: "#CB6E00",
};
const pageTitles = {
	index: "スポーツ大会2023-ホーム",
	map: "スポーツ大会2023-地図",
	results: "スポーツ大会2023-結果",
	rules: "スポーツ大会2023-ルール",
}

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Title />
		<slot />
		<Navbar pageName={title} />
	</body>
</html>
