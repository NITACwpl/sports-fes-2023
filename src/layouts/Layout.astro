---
import '@fontsource/roboto-condensed';
import '@fontsource/zen-kaku-gothic-antique';

import FallAnimation from '../components/FallAnimation.astro';
import Title from '../components/Title.astro';
import Navbar from '../components/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

const pageTitles = {
	index: "スポーツ大会2023-ホーム",
	map: "スポーツ大会2023-地図",
	results: "スポーツ大会2023-結果",
	rules: "スポーツ大会2023-ルール",
}

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitles[title]}</title>
	</head>
	<body>
		<FallAnimation>
			<div class="container">
				<Title />
				<main>
					<slot />
				</main>
				<Navbar pageName={title} />
			</div>
		</FallAnimation>
	</body>
</html>
<style is:global>
	:root {
		--color-black: #000;
		--color-white: #fff;
		--color-primary-black: #454545;
		--color-primary-orange-300: #FFE6C7;
		--color-primary-orange-200: #FFA114;
		--color-primary-orange-100: #CB6E00;
	}
	.num-10 {
		font-size: 10px;
		font-family: "Roboto Condensed", sans-serif;
		font-weight: 400; /* regular */
	}
	.num-24 {
		font-size: 24px;
		font-family: "Roboto Condensed", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-10 {
		font-size: 10px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-12 {
		font-size: 12px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 500; /* medium */
	}
	.text-16 {
		font-size: 16px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 400; /* regular */
	}
	.text-20 {
		font-size: 20px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	.text-24 {
		font-size: 24px;
		font-family: "Zen Kaku Gothic Antique", sans-serif;
		font-weight: 700; /* bold */
	}
	html {
		font-family: system-ui, sans-serif;
		background: #eee;
	}
	* {
		margin: 0;
		padding: 0;
	}
	body {
		width: 100dvw;
		height: 100dvh;
		display: flex;
		justify-content: center;
	}
	.container {
		width: 100%;
		max-width: 800px;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	main {
		display: flex;
		flex-direction: column;
		flex: 1;
		overflow-y: auto;
		padding: 0 10px;
		background-color: var(--color-white);
	}

	main>* {
		z-index: 1;
	}

	/* JSで管理していてmoduleCSSだとバグるので、、 */
    .leaf {
        background-color: #f00; /* TODO */
        border-radius: 50%;
        position: absolute;
        animation: fall 10s linear;
		z-index: 0;
    }
</style>
