---
import Title from '../components/Title.astro';
import Navbar from '../components/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

const pageTitles = {
	index: "スポーツ大会2023-ホーム",
	map: "スポーツ大会2023-地図",
	results: "スポーツ大会2023-結果",
	rules: "スポーツ大会2023-ルール",
}

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitles[title]}</title>
	</head>
	<body>
		<Title />
		<slot />
		<Navbar pageName={title} />
	</body>
</html>
<style is:global>
	:root {
		--color-black: #000;
		--color-white: #fff;
		--color-primary-black: #454545;
		--color-primary-orange-300: #FFE6C7;
		--color-primary-orange-200: #FFA114;
		--color-primary-orange-100: #CB6E00;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #eee;
	}
	* {
		margin: 0;
		padding: 0;
	}
	body {
		width: 100dvw;
		height: 100dvh;
	}
</style>
